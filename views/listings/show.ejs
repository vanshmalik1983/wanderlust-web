<%- layout("/layouts/boilerplate") %>

<div class="container mt-5">

  <div class="card shadow">

    <!-- Image -->
    <img src="<%= listing.image?.url || '/images/placeholder.jpg' %>" class="card-img-top" alt="Listing Image" style="height: 300px; object-fit: cover;">

    <div class="card-body">
      <h3 class="card-title mb-4 text-center">Listing Details</h3>

      <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item">
          <strong>Owner:</strong> <%= listing.owner ? listing.owner.username : "Unknown Owner" %>
        </li>
        <li class="list-group-item"><strong>Title:</strong> <%= listing.title %></li>
        <li class="list-group-item"><strong>Description:</strong> <%= listing.description %></li>
        <li class="list-group-item"><strong>Price:</strong> â‚¹ <%= listing.price %></li>
        <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
        <li class="list-group-item"><strong>Country:</strong> <%= listing.country %></li>
      </ul>

      <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
      <div class="d-flex justify-content-between">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit Listing</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
          <button class="btn btn-danger">Delete Listing</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <div class="col-8 offset-2 mt-4">
    <hr>
    <% if (currUser) { %>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="number" min="1" max="5" name="review[rating]" class="form-control" required>
        <div class="invalid-feedback">Please provide a rating between 1 and 5</div>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" class="form-control" rows="4" required></textarea>
        <div class="invalid-feedback">Please submit comments</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>
    <% } %>

    <h5>All Reviews</h5>
    <div class="row">
      <% for (const review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h6 class="card-title">@<%= review.author ? review.author.username : "Unknown" %></h6>
          <p class="card-text"><%= review.comment %></p>
          <p>Rating: <%= review.rating %> / 5</p>
          <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
          <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
