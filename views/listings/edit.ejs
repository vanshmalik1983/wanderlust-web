<%- layout("/layouts/boilerplate") %>

<h1 class="mt-3 mb-4">Edit Listing</h1>

<form action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="listing[title]" value="<%= listing.title %>" required>
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" name="listing[description]" rows="3"><%= listing.description %></textarea>
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price per night (â‚¹)</label>
    <input type="number" class="form-control" id="price" name="listing[price]" value="<%= listing.price %>" required>
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" class="form-control" id="location" name="listing[location]" value="<%= listing.location %>" required>
  </div>

  <div class="mb-3">
    <label for="country" class="form-label">Country</label>
    <input type="text" class="form-control" id="country" name="listing[country]" value="<%= listing.country %>" required>
  </div>

  <div class="mb-3">
    <label for="images" class="form-label">Add More Images</label>
    <input type="file" class="form-control" id="images" name="images" multiple>
    <small class="text-muted">You can upload additional images. Existing images will remain.</small>
  </div>

  <button type="submit" class="btn btn-primary">Update Listing</button>
</form>

<h3 class="mt-5">Existing Images</h3>
<div class="d-flex flex-wrap">
  <% if(listing.images && listing.images.length > 0){ %>
    <% listing.images.forEach(img => { %>
      <div class="m-2">
        <img src="<%= img.url %>" alt="listing image" style="height:150px; width:200px; object-fit:cover;">
      </div>
    <% }) %>
  <% } else { %>
    <p>No images uploaded yet.</p>
  <% } %>
</div>
